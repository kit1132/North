{
  "manifest_version": 3,
  "name": "Amazon Order Exporter",
  "version": "1.0.0",
  "description": "Export Amazon.co.jp order history to CSV for Claude analysis",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://www.amazon.co.jp/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://www.amazon.co.jp/gp/your-account/order-history*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
